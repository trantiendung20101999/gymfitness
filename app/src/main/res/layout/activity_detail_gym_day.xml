<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".DetailGymDayActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revGymFitness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:paddingBottom="100dp"
        ></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Time to complete"
        android:fontFamily="@font/nosifer"
        android:textColor="@color/flame"
        android:textSize="20dp"
        ></TextView>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Time line: "
        android:fontFamily="@font/nosifer"
        android:textColor="@color/flame"
        android:textSize="20dp"
        android:visibility="gone"
        ></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="420dp">
    <ProgressBar
        android:id="@+id/Progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_flame"
        android:backgroundTint="@color/black"
        android:indeterminate="false"
        android:max="100000"
        android:progress="100000"
        android:progressDrawable="@drawable/circle_yellow"
        android:rotation="-90"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtTimeRemain"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/Progressbar"
        app:layout_constraintRight_toRightOf="@id/Progressbar"
        app:layout_constraintTop_toTopOf="@id/Progressbar"
        android:text="sdfsdf"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/Progressbar"
        android:fontFamily="@font/nosifer"
        android:textColor="@color/flame"
        android:layout_height="wrap_content"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:text="Start"
        app:layout_constraintTop_toBottomOf="@id/txtLine"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/background_tab"
        ></Button>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:text="Stop"
        app:layout_constraintTop_toBottomOf="@id/txtLine"
        android:layout_marginTop="30dp"
    app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/background_tab"
        ></Button>

    <CheckBox
        android:id="@+id/cbMusic"
        app:layout_constraintBottom_toTopOf="@id/btnStop"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Music"
        android:textColor="@color/flame"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></CheckBox>
    <Button
        android:id="@+id/btnComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:text="Complete"
        app:layout_constraintTop_toBottomOf="@id/btnStart"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/background_tab"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>