<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".ExerciseActivity">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgEx"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="225dp"></ImageView>
    <Button
        android:id="@+id/btnVideo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:backgroundTint="@null"
        android:background="@drawable/background_tab"
        app:layout_constraintTop_toBottomOf="@id/imgEx"
        android:text="Watch Video"
        ></Button>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/imgEx"
        android:id="@+id/txtName"
        android:text="Dumbbell bench press "
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/flame"
        android:textSize="20dp"
        android:fontFamily="@font/nosifer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revGymFitness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:paddingBottom="100dp"
        ></androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>